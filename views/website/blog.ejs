                            <p class="blog-post-date">
                                <%= pageData[pageData.length-1].data[4].data %>
                            </p>
                            <h1 class="blog-post-title">
                                <%= pageData[pageData.length-1].data[1].data %>
                            </h1>

                        </div>
                        <div class="slide-up-blog-post-data">
                            <p class="blog-post-date">
                                <%= pageData[pageData.length-1].data[4].data %>
                            </p>
                            <h1 class="blog-post-title">
                                <%= pageData[pageData.length-1].data[1].data %>
                            </h1>
                            <div class="arrow-link"
                                onclick="window.open('/post/<%= pageData[pageData.length-1].slug %>', '_self')">
                                <p style="color: #ffc300; font-size: 20px;">Read More</p>
                                <img src="images/arrow.svg" alt="" class="arrow">
                            </div>
                        </div>
                    </div>
                    <div class="blog-post-area-vert">
                        <div class="blog-post" data-background-image="<%= pageData[pageData.length-2].data[5].data %>"
